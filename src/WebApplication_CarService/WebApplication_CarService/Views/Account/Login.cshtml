<h2>Přihlášení</h2>


<form asp-action="Login" method="post">
    <label>Email:</label>
    <input name="email" required />
    <br />
    <label>Heslo:</label>
    <input name="password" type="password" required />
    <br />
    <button type="submit">Přihlásit se</button>
</form>

@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}

